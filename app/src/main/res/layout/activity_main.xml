<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.glacat.rich.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:gravity="left|top"
            android:hint="edit start"
            android:padding="10dp"
            android:typeface="monospace"
            android:text=" "
            android:textColor="#2c2c2c"
            android:textColorHint="#e1e1e1"
            android:textSize="13sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/prew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#2c2c2c" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="6dp"
                android:button="@null"
                android:gravity="center"
                android:onClick="bold"
                android:padding="6dp"
                android:text="加粗"
                android:textColor="@color/toggle_selector"
                android:textSize="13sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="6dp"
                android:button="@null"
                android:gravity="center"
                android:onClick="italic"
                android:padding="6dp"
                android:text="斜体"
                android:textColor="@color/toggle_selector"
                android:textSize="13sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="6dp"
                android:button="@null"
                android:gravity="center"
                android:onClick="strichLine"
                android:padding="6dp"
                android:text="删除线"
                android:textColor="@color/toggle_selector"
                android:textSize="13sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="6dp"
                android:button="@null"
                android:gravity="center"
                android:onClick="underLine"
                android:padding="6dp"
                android:text="下划线"
                android:textColor="@color/toggle_selector"
                android:textSize="13sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="6dp"
                android:button="@null"
                android:gravity="center"
                android:onClick="changeColor"
                android:padding="6dp"
                android:text="颜色"
                android:textColor="@color/toggle_selector"
                android:textSize="13sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="6dp"
                    android:button="@null"
                    android:gravity="center"
                    android:onClick="head0"
                    android:padding="6dp"
                    android:text="正文"
                    android:textColor="#2c2c2c"
                    android:textSize="13sp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="6dp"
                    android:button="@null"
                    android:gravity="center"
                    android:onClick="head1"
                    android:padding="6dp"
                    android:text="H1"
                    android:textColor="#2c2c2c"
                    android:textSize="13sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="6dp"
                    android:button="@null"
                    android:gravity="center"
                    android:onClick="head2"
                    android:padding="6dp"
                    android:text="H2"
                    android:textColor="#2c2c2c"
                    android:textSize="13sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="6dp"
                    android:button="@null"
                    android:gravity="center"
                    android:onClick="head3"
                    android:padding="6dp"
                    android:text="H3"
                    android:textColor="#2c2c2c"
                    android:textSize="13sp" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="6dp"
                android:gravity="center"
                android:onClick="insetImg"
                android:padding="6dp"
                android:text="图片"
                android:textColor="#2c2c2c"
                android:textSize="13sp" />
        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>
